# Google Groups Scraper Configuration
TARGET_GROUPS=https://groups.google.com/g/carbondioxideremoval
MAX_THREADS_PER_GROUP=100
OUTPUT_FILE=data/google_group_data.csv
CHECKPOINT_FILE=data/scraper_checkpoint.json

# Scraper Behavior
HEADLESS_MODE=false
MIN_DELAY=3
MAX_DELAY=6
PAGE_LOAD_WAIT=5

# RAG Engine Configuration
VECTOR_DB_PATH=data/chroma_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
RETRIEVAL_K=3

# OpenAI Configuration (for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/scraper.log
